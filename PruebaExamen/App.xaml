<Application x:Class="PruebaExamen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PruebaExamen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Border}" x:Key="BordeImagenesWrapPanel">
            <Setter Property="Grid.Row" Value="0"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Grid.ColumnSpan" Value="4"/>
            <Setter Property="Background" Value="BurlyWood"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="3,0,3,3"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="CornerRadius" Value="0,0,8,8"/>
        </Style>
        <Style TargetType="{x:Type Image}" x:Key="IconosEstiloImage">
            <Setter Property="Width" Value="60"></Setter>
            <Setter Property="Margin" Value="70,0,-50,0"></Setter>
        </Style>
    </Application.Resources>
</Application>


